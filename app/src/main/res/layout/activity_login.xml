<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".LoginActivity">


    <EditText
        android:id="@+id/lgUnameId"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:hint="User Name"
        android:tooltipText="User Name"
        android:textAlignment="center"
        android:layout_marginTop="150dp"
        />

    <EditText
        android:id="@+id/lgPassId"
        android:layout_marginLeft="75dp"
        android:password="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:tooltipText="Password"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginTop="25sp"
        android:layout_below="@+id/lgUnameId"
        />
    <Button
        android:id="@+id/lginBtnId"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lgPassId"
        android:layout_marginLeft="75dp"
        android:layout_width="250dp"
        android:text="Log In"
        android:textSize="20dp"
        android:background="@color/dark_blue"
        android:textColor="#fff"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/lgRegBtnId"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lginBtnId"
        android:layout_marginLeft="75dp"
        style="@style/Base.CardView"
        android:background="@color/dark_blue"
        android:textColor="#fff"
        android:layout_marginTop="18dp"
        android:text="Sign Up"
        android:textSize="20dp" />

</RelativeLayout>